<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="postAdapter"
            type="com.example.itexblog.ui.adapters.PostAdapter" />

        <variable
            name="entity"
            type="com.example.itexblog.ui.model.PostEntity" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:id="@+id/header_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/post_date"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:ellipsize="end"
                        android:text="Date" />
                </RelativeLayout>



                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/header_text"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"

                    />

                <View
                    android:id="@+id/divider"
                    style="@style/Divider"
                    android:layout_below="@id/post_image"
                    android:visibility="gone"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/post_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/post_image"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="start|end"
                    android:justificationMode="inter_word"
                    android:maxLines="3"
                    android:text="@string/body_message"
                    android:textAlignment="viewStart" />


                <View
                    android:id="@+id/divider2"
                    style="@style/Divider"
                    android:layout_below="@id/post_body"
                    android:layout_marginTop="5dp"
                     />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider2"

                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/edit_btn"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_edit_white" />

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_toEndOf="@id/delete_btn"
                        android:contentDescription="@string/like_btn"
                        app:srcCompat="@drawable/ic_favorite_white" />


                    <ImageView
                        android:id="@+id/delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_toEndOf="@id/edit_btn"
                        android:visibility="gone"
                        android:contentDescription="@string/delete_btn"
                        app:srcCompat="@drawable/ic_delete_white" />

                    <TextView
                        android:id="@+id/num_of_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/like_btn"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/comments"
                        android:textColor="@color/colorPrimaryDark" />


                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
